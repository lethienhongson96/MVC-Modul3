                            <li><a asp-controller="Category" asp-action="Index">Quản Lí Danh Mục</a></li>
                            <li><a asp-controller="Category" asp-action="Create">Tạo Danh Mục Mới</a></li>
                            <li><a href="people.html">Thanh Toán</a></li>
                        </ul>
                    </li>
                    <li>
