@model Category

@{
}

<form asp-controller="Category" asp-action="Edit" method="post">
    <input type="hidden" asp-for="CreateBy" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tên danh mục</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Active</label>
        <div class="col-sm-10">
            <select asp-for="Status" asp-items="@Html.GetEnumSelectList<Status>()" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tên danh mục</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="CreateAt">
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Lưu</button>
</form>
