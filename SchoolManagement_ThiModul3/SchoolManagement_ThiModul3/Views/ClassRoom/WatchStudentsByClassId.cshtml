@model List<Student>


<table id="OrderIndex" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark" style="text-align:center">
        <tr>
            <th>Tên Học Sinh</th>
            <th>Ngày Sinh</th>
            <th>Giới Tính</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody style="text-align:center">
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.DoB.ToShortDateString()
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <a href="javascript:void(0)" class="text-danger" onclick="Student.delete(@item.Id)">Delete</a>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-controller="Student" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot style="text-align:center">
        <tr>
            <th>Tên Học Sinh</th>
            <th>Ngày Sinh</th>
            <th>Giới Tính</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </tfoot>
</table>

<script src="~/js/Student.js"></script>