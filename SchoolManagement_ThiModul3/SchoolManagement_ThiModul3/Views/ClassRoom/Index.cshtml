@model List<ClassRoom>

@inject AppDbContext context;


<table id="OrderIndex" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark" style="text-align:center">
        <tr>
            <th>Tên Lớp Học</th>
            <th>Số Lượng Học Sinh</th>
            <th>Thao Tác</th>
        </tr>
    </thead>

    <tbody style="text-align:center">
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>
                    @item.ClassName
                </td>
                <td>
                    @context.Students.ToList().FindAll(el => el.ClassRoomId == item.Id).Count Học Sinh
                </td>
                <td>
                    <a asp-action="WatchStudentsByClassId" asp-controller="ClassRoom" asp-route-id="@item.Id">
                        Xem Danh Sách Học Sinh
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot style="text-align:center">
        <tr>
            <th>Tên Lớp Học</th>
            <th>Số Lượng Học Sinh</th>
            <th>Thao Tác</th>
        </tr>
    </tfoot>
</table>

