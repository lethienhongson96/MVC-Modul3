@model Student
@inject AppDbContext context;

<form asp-controller="Student" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Họ Và Tên</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="FullName">
        </div>
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Ngày Sinh</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="DoB">
        </div>
        <span asp-validation-for="DoB"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Giới tính</label>
        <div class="col-sm-10">
            <select asp-for="Gender" class="form-control">
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
                <option value="Khác">Khác</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" asp-for="Email">
        </div>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Lớp học</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ClassRoomId"
                    asp-items="@(new SelectList(context.ClassRooms.ToList(),"Id","ClassName"))">
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Tạo Mới</button>
</form>